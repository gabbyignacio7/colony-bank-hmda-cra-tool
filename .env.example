# Colony Bank HMDA/CRA Tool - Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# APPLICATION SETTINGS
# ===========================================

# Application environment: development | production | test
NODE_ENV=development

# Server port (default: 5000)
PORT=5000

# Server host (default: 127.0.0.1)
HOST=127.0.0.1

# ===========================================
# AUTHENTICATION
# ===========================================

# Password for accessing the application
# Change this in production!
APP_PASSWORD=colony2024

# ===========================================
# DEPLOYMENT
# ===========================================

# Set to true when deploying to GitHub Pages
GITHUB_PAGES=false

# Base path for GitHub Pages deployment (auto-detected from repo name)
# GITHUB_PAGES_BASE=/colony-bank-hmda-tool/

# ===========================================
# LOGGING & DEBUGGING
# ===========================================

# Log level: debug | info | warn | error
LOG_LEVEL=info

# Enable detailed ETL logging
ETL_DEBUG=false
